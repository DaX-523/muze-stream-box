generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  provider Provider
  streams  Stream[]
  upvotes  Upvote[]
}

model Stream {
  id          String   @id @default(uuid())
  isActive    Boolean
  extractedId String
  created     DateTime
  userId      String
  upvotes     Upvote[]
  user        User     @relation(fields: [userId], references: [id])
}

model Upvote {
  id       Int    @id @default(autoincrement())
  userId   String
  streamId String
  user     User   @relation(fields: [userId], references: [id])
  stream   Stream @relation(fields: [streamId], references: [id])

  @@unique([userId, streamId])
}

enum Provider {
  Google
}
